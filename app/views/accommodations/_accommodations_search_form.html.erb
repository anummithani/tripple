<%= search_form_for @q, :class => collapse_search_form, :id => "accommodations_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Name contains" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :check_out_date, "Check out date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='check_out_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :check_out_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Check out date greater than or equal to", :data => {:target => '#check_out_dategteqPicker'} %>
          <div class="input-group-append" data-target='#check_out_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='check_out_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :check_out_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Check out date less than or equal to", :data => {:target => '#check_out_datelteqPicker'} %>
          <div class="input-group-append" data-target='#check_out_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#check_out_dategteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#check_out_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#check_out_dategteqPicker').on("dp.change", function (e) {
              $('#check_out_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#check_out_datelteqPicker').on("dp.change", function (e) {
              $('#check_out_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :check_in_date, "Check in date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='check_in_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :check_in_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Check in date greater than or equal to", :data => {:target => '#check_in_dategteqPicker'} %>
          <div class="input-group-append" data-target='#check_in_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='check_in_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :check_in_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Check in date less than or equal to", :data => {:target => '#check_in_datelteqPicker'} %>
          <div class="input-group-append" data-target='#check_in_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#check_in_dategteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#check_in_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#check_in_dategteqPicker').on("dp.change", function (e) {
              $('#check_in_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#check_in_datelteqPicker').on("dp.change", function (e) {
              $('#check_in_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :trip_city_cont, "Trip city contains" %>
    <%= f.text_field :trip_city_cont, :class => "form-control", :placeholder => "Trip city contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/accommodations" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

