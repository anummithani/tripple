<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Travelled Trips

    <a data-toggle="collapse" href="#user_travelled_trips_new_form">
      Add traveler
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.travelled_trips.each do |traveler| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to traveler, traveler %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_travelled_trips_new_form">
        <%= render partial: "users/user_travelled_trips_new_form" %>
      </div>
    </div>

  </ul>
</div>
