<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recieved Friend Requests

    <a data-toggle="collapse" href="#user_recieved_friend_requests_new_form">
      Add friend request
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.recieved_friend_requests.each do |friend_request| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to friend_request, friend_request %>
        <!-- Show link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_recieved_friend_requests_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "users/user_recieved_friend_requests_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
