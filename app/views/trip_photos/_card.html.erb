<div class="card mb-3">
  <h2 class="card-header h4">
    Trip Photo #<%= trip_photo.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Image</dt>
      <dd>
        <%= cl_image_tag @trip_photo.image, class: "img-fluid" %>
      </dd>

      <dt>Caption</dt>
      <dd><%= trip_photo.caption %></dd>

      <dt>Trip</dt>
      <dd>
        <% if @trip_photo.trip.present? %>
          <%= link_to trip_photo.trip, trip_photo.trip %>
        <% end %>
      </dd>

      <dt>Uploading user</dt>
      <dd>
        <% if @trip_photo.uploading_user.present? %>
          <%= link_to trip_photo.uploading_user, trip_photo.uploading_user %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back trip_photo, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_trip_photo_url(trip_photo), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to trip_photo, method: :delete, data: { confirm: "Do you really want to delete this trip_photo?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(trip_photo.updated_at) %> ago
  </div>
</div>
