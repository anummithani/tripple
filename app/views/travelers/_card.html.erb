<div class="card mb-3">
  <h2 class="card-header h4">
    Traveler #<%= traveler.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @traveler.user.present? %>
          <%= link_to traveler.user, traveler.user %>
        <% end %>
      </dd>

      <dt>Trip</dt>
      <dd>
        <% if @traveler.trip.present? %>
          <%= link_to traveler.trip, traveler.trip %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back traveler, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @traveler.user %>
          <%= link_to edit_traveler_url(traveler), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @traveler.user %>
          <%= link_to traveler, method: :delete, data: { confirm: "Do you really want to delete this traveler?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(traveler.updated_at) %> ago
  </div>
</div>
