<%= search_form_for @q, :class => collapse_search_form, :id => "trips_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :city_cont, "City contains" %>
    <%= f.text_field :city_cont, :class => "form-control", :placeholder => "City contains" %>
  </div>

  <div class="form-group">
    <%= f.label :departure_date, "Departure date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='departure_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :departure_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Departure date greater than or equal to", :data => {:target => '#departure_dategteqPicker'} %>
          <div class="input-group-append" data-target='#departure_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='departure_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :departure_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Departure date less than or equal to", :data => {:target => '#departure_datelteqPicker'} %>
          <div class="input-group-append" data-target='#departure_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#departure_dategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#departure_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#departure_dategteqPicker').on("dp.change", function (e) {
              $('#departure_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#departure_datelteqPicker').on("dp.change", function (e) {
              $('#departure_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :arrival_date, "Arrival date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='arrival_dategteqPicker' data-target-input="nearest">
