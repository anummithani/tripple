            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='arrival_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :arrival_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Arrival date less than or equal to", :data => {:target => '#arrival_datelteqPicker'} %>
          <div class="input-group-append" data-target='#arrival_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#arrival_dategteqPicker').datetimepicker({
