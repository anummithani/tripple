<%= form_with(model: @accommodation, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :check_in_date %>
    <%= f.datetime_select :check_in_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :check_out_date %>
    <%= f.datetime_select :check_out_date, class: "form-control" %>
  </div>

  <%= f.hidden_field :trip_id, value: @trip.id %>

  <%= f.submit "Create accommodation", class: "btn btn-block btn-outline-secondary" %>
<% end %>
