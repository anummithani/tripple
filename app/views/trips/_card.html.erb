<div class="card mb-3">
  <h2 class="card-header h4">
    Trip #<%= trip.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>City</dt>
      <dd><%= trip.city %></dd>

      <dt>Country</dt>
      <dd><%= trip.country %></dd>

      <dt>Trip name</dt>
      <dd><%= trip.trip_name %></dd>

      <dt>Trip image</dt>
      <dd>
        <%= cl_image_tag @trip.trip_image, class: "img-fluid" %>
      </dd>

      <dt>Arrival date</dt>
      <dd><%= trip.arrival_date %></dd>

      <dt>Departure date</dt>
      <dd><%= trip.departure_date %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back trip, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_trip_url(trip), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to trip, method: :delete, data: { confirm: "Do you really want to delete this trip?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(trip.updated_at) %> ago
  </div>
</div>
