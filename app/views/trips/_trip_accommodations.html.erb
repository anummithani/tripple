<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Accommodations

    <a data-toggle="collapse" href="#trip_accommodations_new_form">
      Add accommodation
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @trip.accommodations.each do |accommodation| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to accommodation, accommodation %>

        <%= link_to accommodation, method: :delete, data: { confirm: "Do you really want to delete this accommodation" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="trip_accommodations_new_form">
        <%= render partial: "trips/trip_accommodations_new_form" %>
      </div>
    </div>

  </ul>
</div>
